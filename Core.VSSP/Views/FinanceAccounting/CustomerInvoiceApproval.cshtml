<style>
    #approval {
        min-height: 650px !important;
    }
</style>
<section class="padding-100-70 white-gray-bg" id="approval">
    <div class="container">
        <div class="row">
            <div class="col-md-12 col-lg-12 col-md-offset-2 col-lg-offset-2 col-sm-12 col-xs-12">
                <div class="area-title text-center wow fadeIn">
                    <h2>@ViewBag.Title</h2>
                </div>
            </div>
            <div class="col-md-12 col-lg-12 col-md-offset-2 col-lg-offset-2 col-sm-12 col-xs-12 text-justify">
                @{
                    if (@ViewBag.UserName != null)
                    {
                        string attachment = @ViewBag.InvoiceTitle + ".pdf";

                        <p class="font-weight-bold font-lg">
                            Hello @ViewBag.UserName,
                        </p>
                        <p>
                            We hereby convey, that there are Invoices that you need to digitally sign through this portal. You simply click the <b>Sign Approval</b> button to approve it, or ignore it if you don't agree with it.
                        </p>
                        <p>
                            We hope you read and check the documents that you will approve first. The documents are :
                            <table>
                                <tbody>
                                    <tr>
                                        <td>Title</td>
                                        <td> : </td>
                                        <td>@ViewBag.InvoiceTitle</td>
                                    </tr>
                                    <tr>
                                        <td>Invoice Number</td>
                                        <td> : </td>
                                        <td>@ViewBag.InvoiceNumber</td>
                                    </tr>
                                    <tr>
                                        <td>Date</td>
                                        <td> : </td>
                                        <td>@ViewBag.InvoiceDate</td>
                                    </tr>
                                    <tr>
                                        <td>Customer</td>
                                        <td> : </td>
                                        <td>@ViewBag.CustomerName</td>
                                    </tr>
                                    <tr>
                                        <td class="align-top">Document</td>
                                        <td class="align-top"> : </td>
                                        <td class="align-top">
                                            <a href="@Url.Action("InvoiceNotaFaktur","Reports",new { InvoiceNumber = ViewBag.InvoiceNumber, FileFormat="Pdf"})" target="_blank"><i class="fa fa-file-pdf-o text-danger"></i> Nota Faktur.pdf</a><br />
                                            <a href="@Url.Action("InvoiceRecapDelivery","Reports",new { InvoiceNumber = ViewBag.InvoiceNumber, FileFormat="Pdf"})" target="_blank"><i class="fa fa-file-pdf-o text-danger"></i> Recapitulation By Delivery.pdf</a><br />
                                            <a href="@Url.Action("InvoiceRecapPartNumber","Reports",new { InvoiceNumber = ViewBag.InvoiceNumber, FileFormat="Pdf"})" target="_blank"><i class="fa fa-file-pdf-o text-danger"></i> Recapitulation By Part Number.pdf</a>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>Sign</td>
                                        <td> : </td>
                                        <td><a href="@Url.Action("CustomerInvoiceApproved","FinanceAccounting",new { InvoiceNumber = ViewBag.InvoiceNumber, uid = ViewBag.UserID })" class="btn btn-sm btn-primary"><i class="fa fa-check"></i> Sign Approval</a></td>
                                    </tr>
                                </tbody>
                            </table>
                        </p>
                        <p>
                            Thank you for the good cooperation.
                        </p>
                    }
                    else
                    {
                        <p class="font-weight-bold font-lg">
                            Hello Annonymous,
                        </p>
                        <div class="row">
                            <div class="col-md-1">
                                <div class="mt-auto">
                                    <span class="fa fa-coffee fa-4x"></span>
                                </div>
                            </div>
                            <div class="col-md-10 ml-3">
                                <p>
                                    We're so sorry you don't have access to this page. Please leave page now.
                                </p>
                                <p>
                                    Thank you for the good cooperation.
                                </p>
                            </div>
                        </div>
                    }
                }
            </div>
        </div>
    </div>
</section>