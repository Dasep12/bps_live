            btn += "<a href='#' class='btn btn-sm btn-light text-danger border-danger @ViewBag.canSee' onclick=\"previewGeneralLedgerReceivable('PRL','" + rowid + "')\" datatoogle='tooltip' title='Preview @ViewBag.Title [ " + rowid + " ]'>";
