                break;
            case "Sales":
                break;
            case "Purchases":
                break;
            case "Stock":
                @Html.Partial("Dashboard/_Stock")
                break;
            case "Quality Incoming":
                @Html.Partial("Dashboard/_QualityIncoming")
                break;
            case "Quality Outgoing":
                @Html.Partial("Dashboard/_QualityOutgoing")
                break;
            case "Summary":
                break;
