    $(window).resize(function () {
            var swdark = $("#sw-dark").prop("checked");

            if (swdark) {
                setTimeout(function () {
                    var docHeight = $(window).height();
                    var scrHeight = screen.height;
                    if (docHeight === scrHeight) {
                    $("#dashboardForm").addClass('bg-dark');
                    $(".card-header").addClass('bg-dark');
                    $(".card-body").addClass('bg-dark');
                    $(".brand-card-body").addClass('bg-dark');
                    $(".brand-card-body .text-uppercase").addClass('text-primary').removeClass('text-muted');
                    $("table").addClass('table-dark');
                    $("thead").addClass('thead-dark');
                    $(".text-value.counter").addClass('text-success font-weight-bold');
                    } else {
                    $("#dashboardForm").removeClass('bg-dark');
                    $(".card-header").removeClass('bg-dark');
                    $(".card-body").removeClass('bg-dark');
                    $(".brand-card-body").removeClass('bg-dark');
                    $(".brand-card-body .text-uppercase").removeClass('text-primary').addClass('text-muted');
                    $("table").removeClass('table-dark');
                    $("thead").removeClass('thead-dark');
                    $(".text-value.counter").removeClass('text-success font-weight-bold');
                    }
                }, 100);
            }
        });


