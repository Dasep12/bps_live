@model IEnumerable<Core.VSSP.Models.CMSListModel>
@{
    string ids = "";
}
<section class="padding-100-70" id="faq">

    <div class="container">

        <div class="row">
            <div class="col-md-12 col-lg-12 col-md-offset-2 col-lg-offset-2 col-sm-12 col-xs-12">
                <div class="area-title text-center wow fadeIn">
                    <h2>Frequently Ask Questions</h2>
                </div>
            </div>

            <div class="col-md-8 col-lg-8 col-md-offset-2 col-lg-offset-2 col-sm-12 col-xs-12">
                @if (@Model.Count() > 0)
                {
                    <div class="row">
                        <div class="col-sm-12">
                            <ul class="list-group">
                                @foreach (var faq in Model)
                                {
                                    ids = "collapse-" + faq.ID.ToString();

                                    <li class="list-group-item">
                                        <div class="card-header">
                                            <a href="#@ids" class="control-label" data-toggle="collapse"><i class="fa fa-arrow-circle-o-right"></i> @faq.Title</a><br />
                                        </div>
                                        <div id="@ids" class="card-body collapse">
                                            <p style="padding:10px;margin-top:10px; border-top:solid 0.25px #dcdcdc !important">
                                                @Html.Raw(Html.Encode(faq.IsContent).Replace("\n", "</p><p>").Replace("b_", "<b>").Replace("_b", "</b>"))
                                                <a href="@faq.SubTitle" target="_blank"> link</a>
                                            </p>
                                        </div>
                                    </li>
                                }
                            </ul>

                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</section>

