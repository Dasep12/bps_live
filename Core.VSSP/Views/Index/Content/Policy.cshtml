@model IEnumerable<Core.VSSP.Models.CMSListModel>

<!--TEAM AREA-->
<section class="service-area section-padding white-gray-bg" id="philosophy">
    <div class="container">
        <div class="row">
            <div class="col-md-12 col-lg-12 col-md-offset-2 col-lg-offset-2 col-sm-12 col-xs-12">
                <div class="area-title text-center wow fadeIn">

                    @if (@Model.Count() > 0)
                    {
                        foreach (var policy in Model)
                        {

                            <h2>@policy.Title</h2>
                            <h5>@policy.SubTitle</h5>

                            <br />
                            <br />

                            <div class="col-md-12 col-lg-12 col-md-offset-2 col-lg-offset-2 col-sm-12 col-xs-12 text-justify">
                                <p class="lead">
                                    @Html.Raw(Html.Encode(policy.IsContent).Replace("\n", "</p><p class='lead'>").Replace("b_", "<b>").Replace("_b", "</b>"))
                                </p>
                            </div>

                        }
                    }
                    else
                    {
                        <p>No Policy Data...</p>
                    }
                </div>
            </div>
        </div>

    </div>
</section>
<!--TEAM AREA END-->