<style>
    #approval {
        min-height: 650px !important;
    }
</style>
<section class="padding-100-70 white-gray-bg" id="approval">
    <div class="container">
        <div class="row">
            <div class="col-md-12 col-lg-12 col-md-offset-2 col-lg-offset-2 col-sm-12 col-xs-12">
                <div class="area-title text-center wow fadeIn">
                    <h2>@ViewBag.Title</h2>
                </div>
            </div>
            <div class="col-md-12 col-lg-12 col-md-offset-2 col-lg-offset-2 col-sm-12 col-xs-12 text-justify">
                @{
                    if (@ViewBag.UserName != null)
                    {

                        <p class="font-weight-bold font-lg">
                            Hello @ViewBag.UserName,
                        </p>
                        <p>
                            We hereby convey, that there are Inventory Adjustment Stock that you need to digitally sign through this portal. You simply click the <b>Sign Approval</b> button to approve it, or ignore it if you don't agree with it.
                        </p>
                        <p>
                            We hope you read and check the documents that you will approve first. The documents are :
                            <table>
                                <tbody>
                                    <tr>
                                        <td>Title</td>
                                        <td> : </td>
                                        <td>@ViewBag.OrderTitle</td>
                                    </tr>
                                    <tr>
                                        <td>Adjustment Number</td>
                                        <td> : </td>
                                        <td>@ViewBag.AdjustmentNumber</td>
                                    </tr>
                                    <tr>
                                        <td>Date</td>
                                        <td> : </td>
                                        <td>@ViewBag.AdjustmentDate</td>
                                    </tr>
                                    <tr>
                                        <td>Inventory Number</td>
                                        <td> : </td>
                                        <td>@ViewBag.InventoryNumber</td>
                                    </tr>
                                    <tr>
                                        <td>Area</td>
                                        <td> : </td>
                                        <td>@ViewBag.AreaId</td>
                                    </tr>
                                    <tr>
                                        <td>Location</td>
                                        <td> : </td>
                                        <td>@ViewBag.LocationId</td>
                                    </tr>
                                    <tr>
                                        <td>Document</td>
                                        <td> : </td>
                                        <td>
                                            <a href="@Url.Action("StockAdjustment","Reports",new { Adjustmentnumber = ViewBag.AdjustmentNumber})" target="_blank"><i class="fa fa-file-pdf-o text-danger"></i> Stock Adjustment List</a>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>Sign</td>
                                        <td> : </td>
                                        <td><a href="@Url.Action("StockAdjustmentApproved","Inventory",new { AdjustmentNumber = ViewBag.AdjustmentNumber, uid = ViewBag.UserID })" class="btn btn-sm btn-primary" onclick="processSubmit(this)"><i class="fa fa-check"></i> Sign Approval</a></td>
                                    </tr>
                                </tbody>
                            </table>
                        </p>
                        <p>
                            Thank you for the good cooperation.
                        </p>
                    }
                    else
                    {
                        <p class="font-weight-bold font-lg">
                            Hello Annonymous,
                        </p>
                        <div class="row">
                            <div class="col-md-1">
                                <div class="mt-auto">
                                    <span class="fa fa-coffee fa-4x"></span>
                                </div>
                            </div>
                            <div class="col-md-10 ml-3">
                                <p>
                                    We're so sorry you don't have access to this page. Please leave page now.
                                </p>
                                <p>
                                    Thank you for the good cooperation.
                                </p>
                            </div>
                        </div>
                    }
                }
            </div>
        </div>
    </div>
</section>

<script>
    function processSubmit(obj) {

        $(obj).focusout();
        $(obj).removeClass('btn-primary').addClass('btn-secondary disabled');
        $(obj).html('<i class="fa fa-spinner fa-spin"></i> Signing');

    }
</script>