                </script>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-sm btn-primary" dismiss="modal" onclick="applyYear();"><span class="fa fa-dot-circle-o"></span> Submit</button>
                <button type="button" class="btn btn-sm btn-danger" data-dismiss="modal"><span class="fa fa-times"></span> Cancel</button>
            </div>
        </div>
    </div>
</div>
