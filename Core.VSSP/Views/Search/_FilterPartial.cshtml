<script>
    function browseFilter(id, filtertype, filtername, gridname) {

        var $grid = $("#" + gridname);
        filterRowId = id;
        filterName = filtername;
        filterResult = "";

        switch (filtername) {
            case "DateRangePicker":

                showfilterCalendar();

                break;

            case "DateTimeRangePicker":

                showfilterCalendarTime();

                break;

            case "DatePicker":

                showfilterDate();

                break;

            case "TimePicker":

                showfilterTime();

                break;

            case "YearPicker":

                showfilterYear();

                break;

            case "MonthPicker":

                showfilterMonth();

                break;

            case "FinishGoods":

                showfilterPartFinishGoods("*", "", null);

                break;

            case "RawMaterial":

                showfilterPartRawMaterial("*", "");

                break;

            case "Customer":

                showfilterCustomer();

                break;

            case "Supplier":

                showfilterSupplier();

                break;

            case "Category":

                showfilterCategory();

                break;

            case "Line":

                showfilterLine();

                break;

            case "InspectionType":

                showfilterInspectionType();

                break;

            case "InspectionGate":

                showfilterInspectionGate();

                break;

            case "N/A":

                if ($grid) {
                    $grid.jqGrid("editRow", id, true);
                }
                break;

            case "reset":

                if ($grid) {

                    parameters =
                    {
                        FilterValues: "",
                    }

                    $grid.jqGrid('setRowData', filterRowId, parameters);
                }

                break;

            default:
                //nothing

                break;
        }
    }
</script>