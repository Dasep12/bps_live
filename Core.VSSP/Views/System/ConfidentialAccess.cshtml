<style>
    #confidentialForm .card-body{
        min-height: 76vh !important;
    }
    @@media (min-width: 576px) {
        #confidentialForm .card-body {
            min-height: 0;
        }
}
</style>
<div class="card card-accent-danger" id="confidentialForm">
    <div class="card-body d-flex justify-content-center">
        <div class="col-md-6 align-content-center">
            <div class="d-flex h-100 w-100">
                <div class="justify-content-center align-self-center">
                    <div class="clearfix">
                        <form id="myform" method="post" name="myform">
                            <div class="row">
                                <div class="col-md-3">
                                    <h1 class="float-left display-1 mr-4"><span class="icon-shield"></span></h1>
                                </div>
                                <div class="col-md-9">
                                    <h4 class="pt-3">@ViewBag.Title</h4>
                                    <p class="text-muted">@TempData["ContinueMessage"].</p>
                                    <div class="float-left display-3 mr-4">
                                        <button class="btn btn-info btn-block" type="button" onClick="submitForm(this.form)"><span class="fa fa-arrow-right"></span> Go Back @TempData["ContinueApps"].ToString()</button>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<script>

    function submitForm(FormID) {

        var uri = '@Url.Action(@TempData["ContinueAction"].ToString(), @TempData["ContinueController"].ToString())' ; @*"../"+@TempData["ContinueController"].ToString()+"/"+@TempData["ContinueAction"].ToString();*@
        var res = encodeURI(uri);

        $(FormID).attr('action', res);
        FormID.submit();
    }

</script>
